@model IEnumerable<POS_APP.Models.Category>
@{
    ViewData["Title"] = "Orders";
    var cart = ViewBag.Cart as List<POS_APP.Models.CartItem>;
    var total = ViewBag.Total;
    var activeCategoryId = ViewBag.ActiveCategoryId as int?;
}

<div class="row">
    <!-- เมนู -->
    <div class="col-md-8">
        <h3 class="text-success mb-3">🍴 Select Menu</h3>

        @if (Model != null && Model.Any())
        {
            <!-- Tabs -->
            <ul class="nav nav-tabs mb-3" id="menuTabs" role="tablist">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var category = Model.ElementAt(i);
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(activeCategoryId == category.CategoryId ? "active" : "")"
                                id="tab-@category.CategoryId"
                                data-bs-toggle="tab"
                                data-bs-target="#cat-@category.CategoryId"
                                type="button" role="tab">
                            @category.Name
                        </button>
                    </li>
                }
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var category = Model.ElementAt(i);
                    <div class="tab-pane fade @(activeCategoryId == category.CategoryId ? "show active" : "")"
                         id="cat-@category.CategoryId" role="tabpanel">
                        <div class="row">
                            @if (category.Products != null && category.Products.Any())
                            {
                                @foreach (var product in category.Products)
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <img src="@product.ImageUrl" class="card-img-top" style="height:160px; object-fit:cover;" />
                                            <div class="card-body d-flex flex-column justify-content-between">
                                                <div>
                                                    <h6 class="card-title">@product.Name</h6>
                                                    <p class="fw-bold text-success">@product.Price.ToString("C")</p>
                                                </div>
                                                <form asp-action="AddToCart" method="post">
                                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                                    <input type="hidden" name="categoryId" value="@category.CategoryId" />
                                                    <button type="submit" class="btn btn-sm btn-primary w-100">➕ Add to Cart</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No products in this category.</p>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning">No categories available.</div>
        }
    </div>


    <!-- ตะกร้า -->
    <div class="col-md-4">
        <h3 class="text-success mb-3">🛒 Cart</h3>

        @if (cart != null && cart.Any())
        {
            <div class="list-group mb-3">
                @foreach (var item in cart)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@item.Name</strong>
                            <div class="d-flex align-items-center mt-1">
                                <!-- ปุ่ม - -->
                                <form asp-action="DecreaseQuantity" method="post" class="me-1">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="categoryId" value="@activeCategoryId" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
                                </form>

                                <span class="mx-2">@item.Quantity</span>

                                <!-- ปุ่ม + -->
                                <form asp-action="IncreaseQuantity" method="post" class="ms-1">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="categoryId" value="@activeCategoryId" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                                </form>
                            </div>
                        </div>
                        <div class="text-end">
                            <span>@item.Total.ToString("C")</span><br />
                            <form asp-action="RemoveFromCart" method="post" class="mt-1">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="hidden" name="categoryId" value="@activeCategoryId" />
                                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <h5 class="text-end">Total: <span class="fw-bold text-success">@total.ToString("C")</span></h5>

            <div class="d-grid">
                <form asp-action="Checkout" method="post" class="w-100">
                    <button type="submit" class="btn btn-success btn-lg w-100">Checkout</button>
                </form>
            </div>
        }
        else
        {
            <p class="text-muted">Cart is empty</p>
        }
    </div>
</div>

<!-- ✅ Success Modal -->
<div class="modal fade" id="checkoutSuccessModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Order Completed</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @TempData["CheckoutSuccess"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Error Modal -->
<div class="modal fade" id="checkoutErrorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Error</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @TempData["CheckoutError"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            if ('@TempData["CheckoutSuccess"]' !== '') {
                var successModal = new bootstrap.Modal(document.getElementById('checkoutSuccessModal'));
                successModal.show();
            }
            if ('@TempData["CheckoutError"]' !== '') {
                var errorModal = new bootstrap.Modal(document.getElementById('checkoutErrorModal'));
                errorModal.show();
            }
        });
    </script>
}
