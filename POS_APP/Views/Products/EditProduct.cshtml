@model POS_APP.ViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="text-success">Edit Product</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="CategoryId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Current Image</label><br />
                @if (!string.IsNullOrEmpty(ViewBag.CurrentImage))
                {
                    <img src="@ViewBag.CurrentImage" alt="Product Image" width="150" class="mb-2 rounded" />
                }
                else
                {
                    <span class="text-muted">No image uploaded</span>
                }
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">Upload New Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-success">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
